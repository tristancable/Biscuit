<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DigitRecognizer"
             x:Class="DigitRecognizer.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0">
            <GraphicsView x:Name="CanvasView"
                          Drawable="{x:Static local:MainPage.DrawableInstance}"
                          BackgroundColor="White"
                          StartInteraction="OnCanvasPointerPressed"
                          DragInteraction="OnCanvasPointerMoved"
                          EndInteraction="OnCanvasPointerReleased"/>
        </Border>

        <Border Grid.Row="0" Grid.Column="1">
            <Label Text="Recognizer stuff go here"/>
        </Border>

        <Border Grid.Row="1" Grid.ColumnSpan="2" HorizontalOptions="Center">
            <Button Text="Clear"
                    Clicked="OnClearClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
        </Border>

    </Grid>

</ContentPage>