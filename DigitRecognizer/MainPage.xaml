<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DigitRecognizer"
             x:Class="DigitRecognizer.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Margin="10">
            <GraphicsView x:Name="CanvasView"
                          Drawable="{x:Static local:MainPage.DrawableInstance}"
                          BackgroundColor="White"
                          StartInteraction="OnCanvasPointerPressed"
                          DragInteraction="OnCanvasPointerMoved"
                          EndInteraction="OnCanvasPointerReleased"/>
        </Border>
        
        <Border Grid.Row="0" Grid.Column="1" Margin="10">
            <ScrollView>
                <Label x:Name="NeuralNetwork" Text="Neural Network"/>
            </ScrollView>
        </Border>


        <!--add Margin="10" to Canvas or something  ^^^ 
         Margin="5 0 15 0" vvv-->
        <Button Text="Clear Canvas" Clicked="OnClearClicked" FontSize="18" Grid.Row="1" Grid.ColumnSpan="2" WidthRequest="150" Margin="10"/>
    </Grid>

</ContentPage>